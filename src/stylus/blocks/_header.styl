.header
	background-color color__brand1
	background-image url(../img/header-bg.jpg)
	color color__light
	position relative
		
	&:before
		background-color color__light
		height 51px
		left 0
		position absolute
		top 0
		width 100%
		
		@media (min-width screen-md-min)
			content ''
	
	&__wrapper
		display flex
		flex-direction column
		position relative
		text-align center
		width 100%
	
	&__contain
		display flex
		flex-direction column
		justify-content space-between
		min-height 100vh
		position relative
		width 100%
		z-index 10
		
		@media (min-width screen-lg-min)
			min-height 678px
		
	&__logo
		display flex
		padding-top 16px
		
	&__content
		margin-left auto
		max-width 1081px
		padding-bottom 74px
		padding-top 50px
		text-align left
		width 100%

	&__title
		color inherit
		font-size 50px
		letter-spacing -0.025em
		margin 0
		
		@media(min-width screen-md-min)
			font-size 70px
		
		@media(min-width screen-xl-min)
			font-size h1
		
	
	&__subtitle
		color inherit
		font-size 38px
		letter-spacing -0.025em
		line-height 1.2em
		margin 16px 0 0
		
		@media(min-width screen-md-min)
			font-size 48px