.article
	color color__text
	padding 0
	position relative
	text-align center
	
	&__title
		color inherit
		font-size 25px
		font-weight 800
		line-height 1.2
		margin 0 0 23px
	
	&__desc
		color inherit
		font-size 18px
		letter-spacing -0.04em
		line-height 1.777778em
		margin 0
		
		@media (min-width screen-xl-min)
			padding 0 40px
	
	&__icon
		align-items center
		margin 0 0 52px
		display flex
		justify-content center
		height 130px
		
		img
			display block
			height auto
			max-height 100%
			max-width 102px
			position relative
			transition transform 0.6s ease
			width auto
			
	&:hover

		img	
			transform rotateY(360deg)