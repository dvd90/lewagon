.card
	background-color color__light
	box-shadow 0px 8px 38.64px 7.36px rgba(39, 39, 39, 0.11)
	height 100%
	margin-bottom 0
	padding 58px 30px 50px
	
	@media (min-width screen-md-min)
		padding 58px 50px 50px

	&__title
		font-size 35px
		font-weight 800
		line-height 1.2em
		margin 0 0 24px
		text-align center
		
		@media (min-width screen-xl-min)
			font-size 48px
	
	&__data
		text-align center
		
		@media (min-width screen-xl-min)
			display flex
			padding 0 14px
			text-align left
	
	&__icon
		flex-shrink 0
		margin-bottom 20px
		margin-left auto
		margin-right auto
		max-width 138px
		width auto
		
		@media (min-width screen-xl-min)
			margin-bottom 0
			margin-left 0
			margin-right 32px

	&__text
		font-size 23px
		line-height 1.660502em
		margin 0
		padding-top 15px