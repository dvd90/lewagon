.cols
	align-items flex-start
	display flex
	flex-direction row
	flex-wrap wrap
	justify-content center
	margin-left -20px
	margin-right -20px
	
	&__col
		box-sizing border-box
		min-height 1px
		padding-left 20px
		padding-right 20px
		width 100%
		
		/* Column Spaces */
		
		// horizontal
		&--v-pad-17
			padding-left 17px
			padding-right 17px
			
		&--v-pad-30
			padding-left 30px
			padding-right 30px
			
		&--v-pad-42
			padding-left 42px
			padding-right 42px
		
		// vertical	
		&--v-gut-20
			padding-bottom 20px
		
		&--v-gut-30
			padding-bottom 30px
			
		&--v-gut-50
			padding-bottom 50px
			

		/* Column Sizes */

		&--1-4
			flex 0 0 25%
			max-width 25%
			
		&--1-3
			flex 0 0 33.333333%
			max-width 33.333333%
			
		&--2-3
			flex 0 0 66.666667%
			max-width 66.666667%
			
		&--1-2
			flex 0 0 50%
			max-width 50%
			
		&--1-5
			flex 0 0 20%
			max-width 20%
			
		&--1-6
			flex 0 0 (100 / 6%)
			max-width (100 / 6%)
			
		&--2-5
			flex 0 0 40%
			max-width 40%
			
		&--3-4
			flex 0 0 75%
			max-width 75%
			
		&--3-5
			flex 0 0 60%
			max-width 60%
			
			
		&--9-10
			flex 0 0 90%
			max-width 90%
			
		// sm
		@media(min-width screen-sm-min)
			
			&--sm-1-4
				flex 0 0 (100 / 4%)
				max-width (100 / 4%)
				
			&--sm-1-3
				flex 0 0 (100 / 3%)
				max-width (100 / 3%)
				
			&--sm-1-2
				flex 0 0 50%
				max-width 50%
				
			&--sm-2-3
				flex 0 0 (100 / 3 * 2%)
				max-width (100 / 3 * 2%)
				
			&--sm-3-4
				flex 0 0 (100 / 4 * 3%)
				max-width (100 / 4 * 3%)
			
		// md
		@media(min-width screen-md-min)
		
			&--md-1-4
				flex 0 0 (100 / 4%)
				max-width (100 / 4%)
				
			&--md-1-3
				flex 0 0 (100 / 3%)
				max-width (100 / 3%)
				
			&--md-1-2
				flex 0 0 50%
				max-width 50%
				
			&--md-2-3
				flex 0 0 (100 / 3 * 2%)
				max-width (100 / 3 * 2%)
				
			&--md-2-5
				flex 0 0 40%
				max-width 40%
				
			&--md-3-5
				flex 0 0 60%
				max-width 60%
				
			&--md-3-4
				flex 0 0 (100 / 4 * 3%)
				max-width (100 / 4 * 3%)
		// lg
		@media(min-width screen-lg-min)
		
			&--lg-1-2
				flex 0 0 50%
				max-width 50%
				
			&--lg-1-3
				flex 0 0 (100 / 3%)
				max-width (100 / 3%)
				
			&--lg-1-4
				flex 0 0 (100 / 4%)
				max-width (100 / 4%)
			
			&--lg-1-6
				flex 0 0 (100 / 6%)
				max-width (100 / 6%)
		
			&--lg-3-4
				flex 0 0 (100 / 4 * 3%)
				max-width (100 / 4 * 3%)
				
			&--lg-first
				order -20
				
			&--lg-last
				order 20
				
		// xl
		@media(min-width screen-xl-min)
		
			&--xl-1-2
				flex 0 0 50%
				max-width 50%
				
			&--xl-1-4
				flex 0 0 (100 / 4%)
				max-width (100 / 4%)
				
			&--xl-1-5
				flex 0 0 (100 / 5%)
				max-width (100 / 5%)
				
			&--xl-1-6
				flex 0 0 (100 / 6%)
				max-width (100 / 6%)
				
			&--xl-2-3
				flex 0 0 (100 / 3 * 2%)
				max-width (100 / 3 * 2%)
			
			&--xl-3-4
				flex 0 0 (100 / 4 * 3%)
				max-width (100 / 4 * 3%)
			
			&--xl-4-5
				flex 0 0 (100 / 5 * 4%)
				max-width (100 / 5 * 4%)
			
			&--xl-first
				order -1
				
		/* Column Flex Properties */

		// grow
		&--grow-1
			flex-grow 1
			max-width 100%
		
		&--grow-2
			flex-grow 2
			max-width 100%
		
		&--grow-3
			flex-grow 3
			max-width 100%
		
		// align
		&--top
			align-self flex-start
		
		&--center
			align-self center
			
		&--bottom
			align-self flex-end
		
		//order
		&--first
			order -1
			
				
	/* Columns Flex Properties */
	
	// justify
	&--start
		justify-content flex-start
	
	&--center
		justify-content center
		
	&--end
		justify-content flex-end
	
	//align
	&--stretch
		align-items stretch

	&--middle
		align-items center
		
	&--bottom
		align-items flex-end
		
	/* Columns Spaces */
	
	// horizontal
	&--v-mar-17
		margin-left -17px
		margin-right -17px
		
	&--v-mar-30
		margin-left -30px
		margin-right -30px
		
	&--v-mar-42
		margin-left -42px
		margin-right -42px
	
	// vertical
	&--v-gut-20
		margin-bottom -20px
	
	&--v-gut-30
		margin-bottom -30px
	
	&--v-gut-50
		margin-bottom -50px
	

	/* Additional Properties */
	&--fullheight
		height 100%